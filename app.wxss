.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
input {
  font-family: "PingFang-SC-Regular","SimSun","Microsoft Yahei";
}
.head{
    text-align: center;
    font-size: 11pt;
    margin:5px 0;
    font-weight: bolder;
}


.ad_fix{
    position: fixed;
    width: 750rpx;
    bottom: 0;
}
.ad{
    /* position: fixed; */
    width: 750rpx;
    bottom: 0;
}
.ad_fix .ndoe ,.ad .ndoe{
    width: calc(750rpx - 30px);
    height: 48px;
}

.ada{
    position: fixed;
    width: 750rpx;

}





