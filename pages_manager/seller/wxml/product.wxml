
<view class="padding-lr  margin-top">
    <view class="text-bold">
        <text class="cuIcon-titles text-yellow"></text>
        <text>商品、SKU</text>
    </view>
    <view class=" grid col-4 ">
        <view class="padding-tb-xs flex justify-center" wx:for="{{productList}}" wx:key > 
            <view class="cu-avatar round xl bg-{{item.color}}"  catchtap="clickProduct" data-index="{{index}}">
                <text class="avatar-text text-bold">{{item.name}}</text>
            </view>
        </view>
    </view>
</view>

