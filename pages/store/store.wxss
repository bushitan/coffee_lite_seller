/*******店铺信息******/
.store_info{
    /* display: flex;
    justify-content: space-around; */
}
.store_info .summary{
    text-align: center;
    font-size: 13pt;
    font-weight: bolder;
    margin-bottom: 5px;
    
}
.store_info .mode{
    display: flex;
    justify-content: center;
}
.store_info .mode label{
    width: 100px;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #efaf30;
    color: #fff;
    border-radius: 50%;
}
.store_info  .value {
    display: flex;
    justify-content: space-between;    
    padding: 0 60px;
}





/*********登陆*********/
.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.userinfo .title{
    margin-left: 10px;
    font-size: 12pt;
    font-weight: bolder;
}
.userinfo .date{
    margin-left: 10px;
    font-size: 9pt;
    color: #888;
}

.userinfo .icon_qr{
    margin-right:10px; 
    /* position: absolute;
    right: 5px; */
    
}


.btn{
    text-align: center;
}


